{
  "name": "jslox",
  "description": "Lox interpreter",
  "version": "1.0.0",
  "author": "Evgeny Averyanov",
  "license": "MIT",
  "type": "module",
  "main": "src/main.js",
  "scripts": {
    "lox": "node src/main",
    "ast": "node scripts/GenerateAst.js",
    "fmt": "prettier src scripts -wl && eslint --fix src scripts"
  },
  "devDependencies": {
    "eslint": "^8.53.0",
    "prettier": "^3.1.0"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    }
  }
}
